<script src="text/javascript"></script>
<script>
function getAddress() {
	var request;
	if (window.XMLHttpRequest) {
		request=new XMLHttpRequest();
	} else {
		request=new ActiveXObject ("Microsoft.XMLHTTP");
	}
	request.onreadystatechange = function () {
		if (request.readyState==4 && request.status==200) {
			document.getElementById("address").value=request.responseText;
		}
	};
	var phone=document.getElementByld("phone").value; 
	request.open("POST", "coffe.jsp?phone="+phone, true); 
	request.send();
}


</script>
</head>

<body>
<table id="1">
<tr>
<td><img src="pizza.png" width="120" align="left" hspace="15"></td>
<td><h1>Сделать заказ:</h1></td>
</tr>
</table>
<form action="coffe.jsp" method="get">
<p>Телефон: <input type="text" id="phone"
name="phone" onchange=" getAddress()"/> </p>
<p>Заказ: <textarea rows="5" name="order" id="order"></textarea></p>
<p>Адрес: <textarea rows="5" id="address"
name="address"></textarea></p>
<input type="submit" value="Заказать"><br>
</form>
